# Environment Configuration
# Copy this file to .env.local and update the values

# Security Configuration
REACT_APP_ENCRYPTION_KEY=your-super-secret-encryption-key-change-this-in-production
REACT_APP_API_URL=https://your-api-domain.com
REACT_APP_ENVIRONMENT=development

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key-change-this-in-production
REACT_APP_SESSION_TIMEOUT=1800000

# Rate Limiting
REACT_APP_RATE_LIMIT_WINDOW=900000
REACT_APP_RATE_LIMIT_MAX_REQUESTS=100

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Security Headers
REACT_APP_CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:;"
REACT_APP_HSTS_MAX_AGE=31536000

# EmailJS Configuration for 2FA
VITE_EMAILJS_SERVICE_ID=service_usy9dun
VITE_EMAILJS_TEMPLATE_ID=template_l1tz6ch
VITE_EMAILJS_PUBLIC_KEY=NPNTpy-uFXxyG81mo

# Development vs Production
REACT_APP_DEBUG_MODE=false
REACT_APP_ENABLE_DEVTOOLS=false
